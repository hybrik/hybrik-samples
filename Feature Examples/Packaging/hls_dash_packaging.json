{
  "definitions": {
    "descriptor": "6sec_hls_and_dash_fmp4_packaging",
    "source_filename": "tears_of_steel_720p.mov",
    "source_path": "s3://hybrik-examples/public/sources",
    "segment_duration_sec": 6,
    "destination_mp4s": "{{destination_path}}/mp4s",
    "destination_hls_media": "{{destination_path}}/hls_media",
    "destination_hls_manifests": "{{destination_path}}/hls_manifests",
    "destination_dash_manifests": "{{destination_path}}/dash_manifests",
    "destination_path": "s3://hybrik-examples/public/output/{{descriptor}}"
  },
  "name": "{{descriptor}}: {{source_filename}}",
  "payload": {
    "elements": [
      {
        "uid": "source_file",
        "kind": "source",
        "payload": {
          "kind": "asset_url",
          "payload": {
            "storage_provider": "s3",
            "url": "{{source_path}}/{{source_filename}}"
          }
        }
      },
      {
        "uid": "transcode_all_renditions",
        "kind": "transcode",
        "payload": {
          "location": {
            "storage_provider": "s3",
            "path": "{{destination_mp4s}}"
          },
          "targets": [
            {
              "file_pattern": "{source_basename}_800kbps{default_extension}",
              "existing_files": "replace",
              "container": {
                "kind": "fmp4"
              },
              "video": {
                "codec": "h264",
                "bitrate_mode": "cbr",
                "use_scene_detection": false,
                "bitrate_kb": 800,
                "vbv_buffer_size_kb": 800,
                "profile": "high",
                "level": "3.1",
                "height": 486,
                "par": "1:1",
                "idr_interval": {
                  "seconds": "{{segment_duration_sec}}"
                },
                "layer_affinities": [
                  "audio_high"
                ]
              }
            },
            {
              "file_pattern": "{source_basename}_400kbps{default_extension}",
              "existing_files": "replace",
              "container": {
                "kind": "fmp4"
              },
              "video": {
                "codec": "h264",
                "bitrate_mode": "cbr",
                "use_scene_detection": false,
                "bitrate_kb": 400,
                "vbv_buffer_size_kb": 400,
                "profile": "main",
                "level": "3.0",
                "height": 360,
                "par": "1:1",
                "idr_interval": {
                  "seconds": "{{segment_duration_sec}}"
                },
                "layer_affinities": [
                  "audio_low"
                ]
              }
            },
            {
              "file_pattern": "{source_basename}_200kbps{default_extension}",
              "existing_files": "replace",
              "container": {
                "kind": "fmp4"
              },
              "video": {
                "codec": "h264",
                "bitrate_mode": "cbr",
                "use_scene_detection": false,
                "bitrate_kb": 200,
                "vbv_buffer_size_kb": 200,
                "profile": "baseline",
                "level": "3.0",
                "height": 252,
                "par": "1:1",
                "idr_interval": {
                  "seconds": "{{segment_duration_sec}}"
                },
                "layer_affinities": [
                  "audio_low"
                ]
              }
            },
            {
              "file_pattern": "{source_basename}_audio_64kbps{default_extension}",
              "existing_files": "replace",
              "container": {
                "kind": "fmp4"
              },
              "audio": [
                {
                  "channels": 2,
                  "codec": "aac_lc",
                  "sample_rate": 48000,
                  "bitrate_kb": 64,
                  "layer_id": "audio_low"
                }
              ]
            },
            {
              "file_pattern": "{source_basename}_audio_128kbps{default_extension}",
              "existing_files": "replace",
              "container": {
                "kind": "fmp4"
              },
              "audio": [
                {
                  "channels": 2,
                  "codec": "aac_lc",
                  "sample_rate": 48000,
                  "bitrate_kb": 128,
                  "layer_id": "audio_high"
                }
              ]
            }
          ]
        }
      },
      {
        "uid": "hls_single_ts",
        "kind": "package",
        "payload": {
          "uid": "main_manifest",
          "kind": "hls",
          "location": {
            "storage_provider": "s3",
            "path": "{{destination_hls_manifests}}",
            "attributes": [
              {
                "name": "ContentType",
                "value": "application/x-mpegURL"
              }
            ]
          },
          "file_pattern": "master_manifest.m3u8",
          "segmentation_mode": "single_ts",
          "force_original_media": false,
          "media_location": {
            "storage_provider": "s3",
            "path": "{{destination_hls_media}}",
            "attributes": [
              {
                "name": "ContentType",
                "value": "video/MP2T"
              }
            ]
          },
          "media_file_pattern": "{source_basename}.ts",
          "hls": {
            "media_playlist_location": {
              "storage_provider": "s3",
              "path": "{{destination_hls_manifests}}"
            }
          }
        }
      },
      {
        "uid": "dash_fmp4",
        "kind": "package",
        "payload": {
          "uid": "main_manifest",
          "kind": "dash",
          "location": {
            "storage_provider": "s3",
            "path": "{{destination_dash_manifests}}"
          },
          "file_pattern": "master_manifest.mpd",
          "segmentation_mode": "fmp4",
          "force_original_media": true
        }
      }
    ],
    "connections": [
      {
        "from": [
          {
            "element": "source_file"
          }
        ],
        "to": {
          "success": [
            {
              "element": "transcode_all_renditions"
            }
          ]
        }
      },
      {
        "from": [
          {
            "element": "transcode_all_renditions"
          }
        ],
        "to": {
          "success": [
            {
              "element": "hls_single_ts"
            },
            {
              "element": "dash_fmp4"
            }
          ]
        }
      }
    ]
  }
}
