{
    "definitions": {
        "descriptor": "dolby_impact_mp4_3840x2160_10000kbs",
        "source": "s3://hybrik-examples/public/sources/tears_of_steel_4k.mov",
        "destination_path": "s3://hybrik-examples/public/output/format_examples/mp4/{{descriptor}}"
    },
    "name": "{{descriptor}}: {{source}}",
    "payload": {
        "elements": [
            {
                "uid": "source_file",
                "kind": "source",
                "payload": {
                    "kind": "asset_url",
                    "payload": {
                        "storage_provider": "s3",
                        "url": "{{source}}",
                        "trim": {
                            "inpoint_sec": 30,
                            "duration_sec": 10
                        }
                    }
                }
            },
            {
                "uid": "transcode_task",
                "kind": "transcode",
                "payload": {
                    "location": {
                        "storage_provider": "s3",
                        "path": "{{destination_path}}"
                    },
                    "targets": [
                        {
                            "file_pattern": "{{descriptor}}{default_extension}",
                            "existing_files": "replace",
                            "container": {
                                "kind": "mp4"
                            },
                            "video": {
                                "codec": "h265",
                                "codec_provider": "dolby_impact",
                                "width": 3840,
                                "height": 2160,
                                "bitrate_mode": "vbr",
                                "bitrate_kb": 10000
                            },
                            "audio": [
                                {
                                    "codec": "aac_lc",
                                    "channels": 2,
                                    "sample_rate": 48000,
                                    "bitrate_kb": 96
                                }
                            ]
                        }
                    ]
                }
            }
        ],
        "connections": [
            {
                "from": [
                    {
                        "element": "source_file"
                    }
                ],
                "to": {
                    "success": [
                        {
                            "element": "transcode_task"
                        }
                    ]
                }
            }
        ]
    }
}